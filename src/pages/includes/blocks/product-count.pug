mixin product-count(props={})
	.js-product-count
		.input-quantity(class=`${props.cart ? 'input-quantity--cart': ''}`)
			button.input-quantity__button.js-product-minus -
			input.input-quantity__input.js-product-input(type="number", name="", value="1", min="1", max="10")
			button.input-quantity__button.js-product-plus +